{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/sunray-config-v1.schema.json",
  "title": "Sunray Worker Configuration",
  "description": "Schéma de configuration YAML pour Muppy Sunray",
  "type": "object",
  "required": ["version", "users", "hosts"],
  "properties": {
    "version": {
      "type": "integer",
      "const": 1,
      "description": "Version du schéma de configuration"
    },
    "users": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "required": ["pubkey"],
          "properties": {
            "pubkey": {
              "type": "string",
              "description": "Clé publique ED25519 encodée en base64"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "hosts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["domain", "protected", "authorized_users"],
        "properties": {
          "domain": {
            "type": "string",
            "format": "hostname",
            "description": "Nom de domaine à protéger"
          },
          "protected": {
            "type": "boolean"
          },
          "authorized_users": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "allowed_ips": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "ipv4"  // we’ll accept IPv6 informally; JSON Schema doesn’t validate both at once here
            }
          },
          "allowed_paths": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["pattern", "auth"],
              "properties": {
                "pattern": {
                  "type": "string",
                  "description": "Expression régulière à appliquer au chemin d'URL"
                },
                "auth": {
                  "type": "object",
                  "required": ["type"],
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["open", "header", "query_param"]
                    },
                    "name": {
                      "type": "string",
                      "description": "Nom du header ou du paramètre requis"
                    },
                    "value": {
                      "type": "string",
                      "description": "Valeur attendue pour le header ou le paramètre"
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}