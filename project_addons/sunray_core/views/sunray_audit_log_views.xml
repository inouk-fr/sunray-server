<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_sunray_audit_log_tree" model="ir.ui.view">
        <field name="name">sunray.audit.log.list</field>
        <field name="model">sunray.audit.log</field>
        <field name="arch" type="xml">
            <list create="false" edit="false" delete="false">
                <field name="timestamp"/>
                <field name="event_type"/>
                <field name="sunray_admin_user_id" optional="show"/>
                <field name="sunray_user_id" optional="show"/>
                <field name="sunray_worker" optional="show"/>
                <field name="event_source" optional="show"/>
                <field name="request_id" optional="show"/>
                <field name="ip_address" optional="show"/>
                <field name="severity"/>
                <field name="username" optional="show"/>
                <field name="details" optional="show"/>
            </list>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_sunray_audit_log_search" model="ir.ui.view">
        <field name="name">sunray.audit.log.search</field>
        <field name="model">sunray.audit.log</field>
        <field name="arch" type="xml">
            <search>
                <field name="event_type"/>
                <field name="sunray_admin_user_id"/>
                <field name="sunray_user_id"/>
                <field name="sunray_worker"/>
                <field name="event_source"/>
                <field name="request_id"/>
                <field name="ip_address"/>
                <field name="username"/>
                <separator/>
                <filter name="critical" string="Critical" domain="[('severity', '=', 'critical')]"/>
                <filter name="error" string="Error" domain="[('severity', '=', 'error')]"/>
                <filter name="warning" string="Warning" domain="[('severity', '=', 'warning')]"/>
                <filter name="info" string="Info" domain="[('severity', '=', 'info')]"/>
                <separator/>
                <filter name="today" string="Today" domain="[('timestamp', '>=', (context_today()).strftime('%Y-%m-%d'))]"/>
                <filter name="last_week" string="Last 7 Days" domain="[('timestamp', '>=', (context_today() + relativedelta(days=-7)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter name="api_events" string="API Events" domain="[('event_source', '=', 'api')]"/>
                <filter name="ui_events" string="UI Events" domain="[('event_source', '=', 'ui')]"/>
                <filter name="worker_events" string="Worker Events" domain="[('event_source', '=', 'worker')]"/>
                <filter name="cli_events" string="CLI Events" domain="[('event_source', '=', 'cli')]"/>
                <filter name="system_events" string="System Events" domain="[('event_source', '=', 'system')]"/>
                <separator/>
                <filter name="auth_events" string="Authentication" domain="[('event_type', 'in', ['auth.success', 'auth.failure'])]"/>
                <filter name="session_events" string="Sessions" domain="[('event_type', 'in', ['session.created', 'session.revoked', 'session.expired'])]"/>
                <filter name="token_events" string="Tokens" domain="[('event_type', 'in', ['token.generated', 'token.consumed', 'token.cleanup'])]"/>
                <filter name="passkey_events" string="Passkeys" domain="[('event_type', 'in', ['passkey.registered', 'passkey.revoked'])]"/>
                <filter name="security_events" string="Security" domain="[('event_type', 'in', ['security.alert', 'SESSION_FINGERPRINT_MISMATCH', 'SESSION_IP_CHANGED', 'SESSION_COUNTRY_CHANGED', 'SESSION_VALIDATION_FAILED'])]"/>
                <group expand="0" string="Group By">
                    <filter string="Event Type" name="group_by_event" context="{'group_by': 'event_type'}"/>
                    <filter string="Event Source" name="group_by_source" context="{'group_by': 'event_source'}"/>
                    <filter string="Admin User" name="group_by_admin" context="{'group_by': 'sunray_admin_user_id'}"/>
                    <filter string="Sunray User" name="group_by_sunray_user" context="{'group_by': 'sunray_user_id'}"/>
                    <filter string="Worker" name="group_by_worker" context="{'group_by': 'sunray_worker'}"/>
                    <filter string="Request ID" name="group_by_request" context="{'group_by': 'request_id'}"/>
                    <filter string="Severity" name="group_by_severity" context="{'group_by': 'severity'}"/>
                    <filter string="Date" name="group_by_date" context="{'group_by': 'timestamp:day'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_sunray_audit_log_form" model="ir.ui.view">
        <field name="name">sunray.audit.log.form</field>
        <field name="model">sunray.audit.log</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false">
                <sheet>
                    <group>
                        <group>
                            <field name="timestamp" readonly="1"/>
                            <field name="event_type" readonly="1"/>
                            <field name="severity" readonly="1"/>
                            <field name="event_source" readonly="1"/>
                            <field name="request_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="sunray_admin_user_id" readonly="1"/>
                            <field name="sunray_user_id" readonly="1"/>
                            <field name="sunray_worker" readonly="1"/>
                            <field name="ip_address" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Event Details">
                        <field name="user_agent" readonly="1"/>
                        <field name="details" readonly="1" widget="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_sunray_audit_logs" model="ir.actions.act_window">
        <field name="name">Audit Logs</field>
        <field name="res_model">sunray.audit.log</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_sunray_audit_log_search"/>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p>
                Security audit logs track all authentication events,
                session management, and administrative actions.
            </p>
        </field>
    </record>
</odoo>