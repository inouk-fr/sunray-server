<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="sunray_access_rule_listview" model="ir.ui.view">
        <field name="name">sunray.access.rule.list</field>
        <field name="model">sunray.access.rule</field>
        <field name="arch" type="xml">
            <list default_order="name">
                <field name="name"/>
                <field name="access_type" widget="badge"
                       decoration-success="access_type == 'public'"
                       decoration-info="access_type == 'cidr'"
                       decoration-warning="access_type == 'token'"/>
                <field name="host_count" string="Used By"/>
                <field name="is_active" widget="boolean_toggle"/>
                <field name="create_date" optional="show"/>
                <field name="write_date" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="sunray_access_rule_searchview" model="ir.ui.view">
        <field name="name">sunray.access.rule.search</field>
        <field name="model">sunray.access.rule</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
                <field name="access_type"/>
                <separator/>
                <filter name="active" string="Active" domain="[('is_active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('is_active', '=', False)]"/>
                <separator/>
                <filter name="public" string="Public Access" domain="[('access_type', '=', 'public')]"/>
                <filter name="cidr" string="CIDR Access" domain="[('access_type', '=', 'cidr')]"/>
                <filter name="token" string="Token Access" domain="[('access_type', '=', 'token')]"/>
                <separator/>
                <filter name="used" string="In Use" domain="[('host_count', '>', 0)]"/>
                <filter name="unused" string="Not Used" domain="[('host_count', '=', 0)]"/>
                <group expand="0" string="Group By">
                    <filter string="Access Type" name="group_by_access_type" context="{'group_by': 'access_type'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'is_active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Form View -->
    <record id="sunray_access_rule__formview" model="ir.ui.view">
        <field name="name">sunray.access.rule.form</field>
        <field name="model">sunray.access.rule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_hosts" type="object"
                                class="oe_stat_button" icon="fa-sitemap">
                            <field name="host_count" widget="statinfo" string="Used By Hosts"/>
                        </button>
                        <button name="action_clone_rule" type="object"
                                class="oe_stat_button" icon="fa-clone"
                                string="Clone Rule"
                                help="Create a customized copy of this rule"/>
                        <button name="btn_refresh" string="Refresh" type="object"
                                class="oe_stat_button" icon="fa-refresh"/>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="e.g., GitLab Webhook, Office Access, Health Checks"/></h1>
                    </div>

                    <group>
                        <group name="basic_info_left">
                            <field name="access_type"/>
                            <field name="is_active" widget="boolean_button" options='{"terminology": "active"}'/>
                        </group>
                        <group name="basic_info_right">
                            <field name="description" placeholder="Detailed explanation of this rule and its purpose..." nolabel="1"/>
                        </group>
                    </group>

                    <div class="alert alert-info" role="status" invisible="host_count == 0">
                        <p><strong>Reusable Rule Library:</strong> This rule is currently used by <field name="host_count" class="fw-bold"/> host(s).
                           Changes will affect all hosts using this rule. Priority is set per-host when attaching the rule.</p>
                    </div>

                    <div class="alert alert-warning" role="status" invisible="host_count > 0">
                        <p><strong>Unused Rule:</strong> This rule is not attached to any hosts yet.
                           Attach it to hosts from the host configuration page.</p>
                    </div>

                    <group string="URL Pattern Configuration" colspan="2">
                        <field name="url_patterns" widget="text"
                               placeholder="Regex patterns for URLs (one per line, # for comments)&#10;Examples:&#10;^/*  # Allow all requests&#10;^/api/webhook.*&#10;^/public/.*&#10;^/health$&#10;For WebSocket rules: patterns match WebSocket upgrade request path&#10;^/ws/chat/.*  # WebSocket path"/>
                    </group>

                    <group string="IP/CIDR Configuration" invisible="access_type != 'cidr'">
                        <group>
                            <field name="allowed_cidrs" widget="text"
                                placeholder="CIDR blocks or IP for IP-based access (one per line, # for comments)&#10;Examples:&#10;192.168.1.0/24  # Office network&#10;234.170.10.5&#10;234.170.10.5/32  # Same as above"/>
                        </group>
                        <group>
                                <field name="parsed_allowed_cidrs" groups="base.group_no_one"/>
                        </group>
                    </group>

                    <group string="Access Tokens" invisible="access_type != 'token'">
                        <field name="token_ids" nolabel="1"
                               context="{'list_view_ref':'sunray_core.sunray_webhook_token_listview_embedded'}" >
                            <list>
                                <field name="name"/>
                                <field name="token_source"/>
                                <field name="header_name" optional="show"/>
                                <field name="param_name" optional="show"/>
                                <field name="is_active" widget="boolean_toggle"/>
                                <field name="expires_at" optional="show"/>
                            </list>
                        </field>
                        <div class="alert alert-success" role="status" colspan="2">
                            <p class="mb-0">
                                <strong>Tip:</strong> Tokens are reusable! The same token can be used in multiple Access Rules across different hosts.
                                Select existing tokens or create new ones from the <strong>Sunray → Configuration → Webhook Tokens</strong> menu.
                            </p>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="sunray_access_rules_action" model="ir.actions.act_window">
        <field name="name">Access Rule Library</field>
        <field name="res_model">sunray.access.rule</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="sunray_access_rule_searchview"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first reusable access rule
            </p>
            <p>
                Access rules are now <strong>reusable libraries</strong> that can be applied to multiple hosts.
                Create common rules (like "Health Checks" or "Office Access") once and reuse them everywhere.
            </p>
            <p>
                <strong>How it works:</strong><br/>
                1. Create access rules in this library with descriptive names<br/>
                2. Attach rules to hosts from the host configuration page<br/>
                3. Set priority and active status per-host when attaching<br/>
                4. Changes to rules automatically affect all hosts using them
            </p>
            <p>
                <strong>Access Types:</strong><br/>
                • <span class="badge badge-success">Public</span>: No authentication required<br/>
                • <span class="badge badge-info">CIDR</span>: IP address whitelist<br/>
                • <span class="badge badge-warning">Token</span>: API/webhook token authentication
            </p>
        </field>
    </record>

    <!-- Menu item will be added to sunray_menus.xml -->
</odoo>
