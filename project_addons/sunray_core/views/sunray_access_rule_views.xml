<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="sunray_access_rule_listview" model="ir.ui.view">
        <field name="name">sunray.access.rule.list</field>
        <field name="model">sunray.access.rule</field>
        <field name="arch" type="xml">
            <list default_order="priority, id">
                <field name="host_id" optional="show"/>
                <field name="priority"/>
                <field name="access_type" widget="badge" decoration-success="access_type == 'public'" decoration-info="access_type == 'cidr'" decoration-warning="access_type == 'token'"/>
                <field name="description"/>
                <field name="is_active" widget="boolean_toggle"/>
                <field name="create_date" optional="show"/>
            </list>
        </field>
    </record>
    <record id="sunray_access_rule_listview_embedded" model="ir.ui.view">
        <field name="name">sunray.access.rule.list.embeded</field>
        <field name="model">sunray.access.rule</field>
        <field name="arch" type="xml">
            <list default_order="priority, id">
                <field name="priority" widget="handle" />
                <field name="access_type" widget="badge" decoration-success="access_type == 'public'" decoration-info="access_type == 'cidr'" decoration-warning="access_type == 'token'"/>
                <field name="description"/>
                <field name="is_active" widget="boolean_toggle"/>
                <field name="create_date" optional="show"/>
            </list>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="sunray_access_rule_searchview" model="ir.ui.view">
        <field name="name">sunray.access.rule.search</field>
        <field name="model">sunray.access.rule</field>
        <field name="arch" type="xml">
            <search>
                <field name="description"/>
                <field name="host_id"/>
                <field name="access_type"/>
                <separator/>
                <filter name="active" string="Active" domain="[('is_active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('is_active', '=', False)]"/>
                <separator/>
                <filter name="public" string="Public Access" domain="[('access_type', '=', 'public')]"/>
                <filter name="cidr" string="CIDR Access" domain="[('access_type', '=', 'cidr')]"/>
                <filter name="token" string="Token Access" domain="[('access_type', '=', 'token')]"/>
                <group expand="0" string="Group By">
                    <filter string="Host" name="group_by_host" context="{'group_by': 'host_id'}"/>
                    <filter string="Access Type" name="group_by_access_type" context="{'group_by': 'access_type'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'is_active'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="sunray_access_rule__formview" model="ir.ui.view">
        <field name="name">sunray.access.rule.form</field>
        <field name="model">sunray.access.rule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                    </header>
                    <div class="oe_button_box" name="button_box">
                        <button name="btn_refresh" string="Refresh" type="object" class="oe_stat_button" icon="fa-refresh"/>
                    </div>
                    
                    <group>
                        <group name="basic_info_left">
                            <field name="host_id" options="{'no_create': True}"/>
                            <field name="access_type"/>
                            <field name="is_active" widget="boolean_button" options='{"terminology": "active"}'/>
                        </group>
                        <group name="basic_info_right">
                            <field name="priority" help="Lower number = higher priority. Rules are evaluated in priority order."/>
                    <div class="alert alert-info" role="status" colspan="2">
                        <p>Rules are evaluated in priority order (lower number first).<br/>
                        The first matching rule determines access type. <br/>
                        If no rule matches, passkey authentication is required.</p>
                    </div>
                        </group>
                        <group colspan="2">
                            <field name="description" placeholder="e.g., GitLab Incoming Webhook for CI/CD"/>

                        </group>

                    </group>
                    <group string="URL Pattern Configuration" colspan="2">
                        <field name="url_patterns" widget="text"
                               placeholder="Regex patterns for URLs (one per line, # for comments)&#10;Examples:&#10;^/*  # This rule is the way to allow all requests! &#10;^/api/webhook.*&#10;^/public/.*&#10;^/health$&#10;For WebSocket rules: patterns match WebSocket upgrade request path&#10;^/ws/chat/.*  # WebSocket path"/>
                    </group>

                    <group string="IP/CIDR Configuration" invisible="access_type != 'cidr'">
                        <group>
                            <field name="allowed_cidrs" widget="text"
                                placeholder="CIDR blocks or IP for IP-based access (one per line, # for comments)&#10;Examples:&#10;192.168.1.0/24&#10;234.170.10.5&#10;234.170.10.5/32  # Same as above"/>
                        </group>
                        <group>
                                <field name="parsed_allowed_cidrs" groups="base.group_no_one"/>
                        </group>
                    </group>

                    <group string="Access Tokens" invisible="access_type != 'token'">
                        <field name="token_ids" nolabel="1"
                               context="{'list_view_ref':'sunray_core.sunray_webhook_token_listview_embedded'}" >
                            <list>
                                <field name="name"/>
                                <field name="token_source"/>
                                <field name="header_name" optional="show"/>
                                <field name="param_name" optional="show"/>
                                <field name="is_active" widget="boolean_toggle"/>
                                <field name="expires_at" optional="show"/>
                            </list>
                        </field>
                        <div class="alert alert-success" role="status" colspan="2">
                            <p class="mb-0">
                                <strong>Tip:</strong> Tokens are now reusable! The same token can be used in multiple Access Rules across different hosts.
                                Select existing tokens or create new ones from the <strong>Sunray → Webhook Tokens</strong> menu.
                            </p>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="sunray_access_rules_action" model="ir.actions.act_window">
        <field name="name">Access Rules</field>
        <field name="res_model">sunray.access.rule</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="sunray_access_rule_searchview"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first access rule
            </p>
            <p>
                Access rules define exceptions to the default passkey authentication.
                Rules are evaluated in priority order (lower number = higher priority).
                The first matching rule determines the access type.
            </p>
            <p>
                <strong>Access Types:</strong><br/>
                • <span class="badge badge-success">Public</span>: No authentication required<br/>
                • <span class="badge badge-info">CIDR</span>: IP address whitelist<br/>
                • <span class="badge badge-warning">Token</span>: API/webhook token authentication<br/>
                • <span class="badge badge-primary">WebSocket</span>: WebSocket connections with origin validation
            </p>
        </field>
    </record>
    
    <!-- Menu item will be added to sunray_menus.xml -->
</odoo>