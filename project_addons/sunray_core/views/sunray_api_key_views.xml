<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_sunray_api_key_tree" model="ir.ui.view">
        <field name="name">sunray.api.key.list</field>
        <field name="model">sunray.api.key</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
                <field name="scopes"/>
                <field name="is_active" widget="boolean_toggle"/>
                <field name="last_used"/>
                <field name="usage_count"/>
            </list>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_sunray_api_key_search" model="ir.ui.view">
        <field name="name">sunray.api.key.search</field>
        <field name="model">sunray.api.key</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <separator/>
                <filter name="active" string="Active" domain="[('is_active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('is_active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_status" context="{'group_by': 'is_active'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_sunray_api_key_form" model="ir.ui.view">
        <field name="name">sunray.api.key.form</field>
        <field name="model">sunray.api.key</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="key" readonly="1" password="True" groups="sunray_core.group_sunray_admin"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="is_active" widget="boolean_toggle"/>
                            <field name="scopes"/>
                            <field name="last_used" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                        </group>
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_sunray_api_keys" model="ir.actions.act_window">
        <field name="name">API Keys</field>
        <field name="res_model">sunray.api.key</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_sunray_api_key_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first API key
            </p>
            <p>
                API keys authenticate Cloudflare Workers to the Sunray Server.
                Each Worker should have its own API key with appropriate permissions.
            </p>
        </field>
    </record>
</odoo>