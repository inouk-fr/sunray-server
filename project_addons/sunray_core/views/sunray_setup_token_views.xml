<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_sunray_setup_token_tree" model="ir.ui.view">
        <field name="name">sunray.setup.token.list</field>
        <field name="model">sunray.setup.token</field>
        <field name="arch" type="xml">
            <list>
                <field name="device_name"/>
                <field name="user_id"/>
                <field name="host_id"/>
                <field name="expires_at"/>
                <field name="consumed" widget="boolean_toggle"/>
                <field name="consumed_date" optional="show"/>
                <field name="current_uses" optional="show"/>
                <field name="max_uses" optional="show"/>
                <field name="create_uid" string="Generated By" optional="show"/>
                <field name="create_date" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sunray_setup_token_search" model="ir.ui.view">
        <field name="name">sunray.setup.token.search</field>
        <field name="model">sunray.setup.token</field>
        <field name="arch" type="xml">
            <search>
                <field name="device_name"/>
                <field name="user_id"/>
                <field name="host_id"/>
                <separator/>
                <filter name="active" string="Active" domain="[('consumed', '=', False), ('expires_at', '>', context_today())]"/>
                <filter name="consumed" string="Consumed" domain="[('consumed', '=', True)]"/>
                <filter name="expired" string="Expired" domain="[('consumed', '=', False), ('expires_at', '&lt;=', context_today())]"/>
                <separator/>
                <filter name="my_tokens" string="My Generated Tokens" domain="[('create_uid', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="User" name="group_by_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Host" name="group_by_host" context="{'group_by': 'host_id'}"/>
                    <filter string="Status" name="group_by_consumed" context="{'group_by': 'consumed'}"/>
                    <filter string="Generated By" name="group_by_creator" context="{'group_by': 'create_uid'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sunray_setup_token_form" model="ir.ui.view">
        <field name="name">sunray.setup.token.form</field>
        <field name="model">sunray.setup.token</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="device_name" placeholder="e.g., John's Laptop" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Token Information">
                            <field name="user_id"/>
                            <field name="host_id"/>
                        </group>
                        <group string="Status">
                            <field name="consumed" widget="boolean_toggle"/>
                            <field name="consumed_date" readonly="1" invisible="not consumed"/>
                            <field name="current_uses" readonly="1"/>
                            <field name="max_uses"/>
                        </group>
                    </group>

                    <group>
                        <group string="Validity">
                            <field name="expires_at"/>
                            <field name="create_date" readonly="1"/>
                            <field name="create_uid" string="Generated By" readonly="1"/>
                        </group>
                        <group string="Security">
                            <field name="show_full_token"
                                   groups="sunray_core.group_sunray_admin"                            
                                   widget="boolean_toggle" />
                            <field name="token_hash" readonly="1" invisible="show_full_token" password="True"/>
                            <field name="token_hash" readonly="1" invisible="not show_full_token"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Technical Details">
                            <group>
                                <field name="id" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                                <field name="write_uid" readonly="1"/>
                            </group>
                        </page>
                        <page string="IP Restrictions">
                            <group>
                                <field name="allowed_cidrs" nolabel="1"
                                        placeholder="One CIDR per line (e.g., 192.168.1.0/24)&#10;# Use # for comments&#10;10.0.0.0/8  # Private network"
                                        widget="text"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sunray_setup_tokens" model="ir.actions.act_window">
        <field name="name">Setup Tokens</field>
        <field name="res_model">sunray.setup.token</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_sunray_setup_token_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No setup tokens found
            </p>
            <p>
                Setup tokens are generated from the User form using the "Generate Setup Token" button.
                They allow users to register their passkeys for authentication.
            </p>
            <p>
                Active tokens are shown by default. Use filters to view consumed or expired tokens.
            </p>
        </field>
    </record>
</odoo>
