<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_sunray_user_tree" model="ir.ui.view">
        <field name="name">sunray.user.list</field>
        <field name="model">sunray.user</field>
        <field name="arch" type="xml">
            <list>
                <field name="username"/>
                <field name="email"/>
                <field name="display_name"/>
                <field name="is_active" widget="boolean_toggle"/>
                <field name="passkey_count"/>
                <field name="active_session_count" optional="show"/>
                <field name="last_login"/>
            </list>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_sunray_user_search" model="ir.ui.view">
        <field name="name">sunray.user.search</field>
        <field name="model">sunray.user</field>
        <field name="arch" type="xml">
            <search>
                <field name="username"/>
                <field name="email"/>
                <separator/>
                <filter name="active" string="Active" domain="[('is_active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('is_active', '=', False)]"/>
                <separator/>
                <filter name="has_passkeys" string="Has Passkeys" domain="[('passkey_count', '>', 0)]"/>
                <filter name="no_passkeys" string="No Passkeys" domain="[('passkey_count', '=', 0)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_status" context="{'group_by': 'is_active'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_sunray_user_form" model="ir.ui.view">
        <field name="name">sunray.user.form</field>
        <field name="model">sunray.user</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="generate_setup_token" string="Generate Setup Token" type="object" icon="fa-plus-circle" class="btn-warning"/>
                    <button name="force_cache_refresh" string="Force Cache Refresh" icon="fa-refresh" type="object" class="btn-warning" 
                            confirm="This will immediately invalidate all cached data for this user across all workers. Continue?"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="username"/>
                            <field name="email"/>
                            <field name="display_name"/>
                        </group>
                        <group>
                            <field name="is_active" widget="boolean_toggle"/>
                            <field name="create_date" readonly="1"/>
                            <field name="last_login" readonly="1"/>
                            <field name="passkey_count" readonly="1"/>
                            <field name="active_session_count" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Passkeys">
                            <field name="passkey_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="credential_id" readonly="1"/>
                                    <field name="create_date" readonly="1"/>
                                    <field name="last_used" readonly="1"/>
                                    <field name="backup_state"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Setup Tokens">
                            <field name="setup_token_ids" options="{'no_create': True}">
                                <list >
                                    <field name="id" optional="hide" />
                                    <field name="device_name"/>
                                    <field name="host_id"/>
                                    <field name="expires_at"/>
                                    <field name="consumed"/>
                                    <field name="create_uid" string="Generated By"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Active Sessions">
                            <field name="active_session_ids" readonly="0">
                                <list>
                                    <field name="id" optional="hide" />
                                    <field name="session_id"/>
                                    <field name="host_id"/>
                                    <field name="created_at"/>
                                    <field name="last_activity"/>
                                    <field name="expires_at"/>
                                    <field name="created_ip"  optional="hide" />
                                    <button name="action_open_revoke_wizard" 
                                            string="Revoke Session" 
                                            type="object" 
                                            class="btn-danger"
                                            help="Immediately terminates this specific session. The user will need to authenticate again to access protected resources. This action only affects the current session - any other active sessions for the same user will remain valid."
                                            icon="fa-user-times"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Authorized Hosts">
                            <div class="mb16">
                                <h3>Authorized Protected Hosts</h3>
                                <p>Hosts this user is authorized to access. Use the "Revoke Sessions" button to terminate all sessions for this user on a specific host.</p>
                            </div>
                            <field name="host_ids">
                                <list>
                                    <field name="id" optional="hide" />
                                    <field name="domain"/>
                                    <field name="sunray_worker_id" string="Worker" optional="show"/>
                                    <field name="is_active" widget="boolean_toggle" optional="show"/>
                                    <button name="%(action_revoke_user_sessions_on_host)d" 
                                            string="Revoke Sessions" 
                                            type="action" 
                                            class="btn-danger"
                                            context="{'default_user_id': parent.id, 'default_host_id': id}"
                                            help="Revokes all sessions for this user on this specific protected host only. The user will need to re-authenticate to access this host, but sessions on other hosts remain valid. Use when access to a specific application needs to be temporarily restricted."
                                            icon="fa-user-times"/>
                                </list>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="domain" readonly="1"/>
                                            <field name="sunray_worker_id" readonly="1"/>
                                            <field name="is_active" readonly="1"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        
                        <page string="Workers">
                            <div class="mb16">
                                <h3>Workers Protecting User's Hosts</h3>
                                <p>Workers that protect hosts this user has access to. Use the "Revoke Sessions" button to terminate all sessions for this user across all hosts protected by a specific worker.</p>
                            </div>
                            <field name="worker_ids" readonly="1">
                                <list>
                                    <field name="id" optional="hide" />
                                    <field name="name"/>
                                    <field name="worker_type" widget="badge"/>
                                    <field name="host_count" string="Protected Hosts"/>
                                    <field name="is_healthy" widget="boolean_toggle" readonly="1"/>
                                    <field name="health_status" optional="show"/>
                                    <field name="last_seen_ts" string="Last Seen" optional="show"/>
                                    <button name="%(action_revoke_user_sessions_on_worker)d" 
                                            string="Revoke Sessions" 
                                            type="action" 
                                            class="btn-danger"
                                            context="{'default_user_id': parent.id, 'default_worker_id': id}"
                                            help="Revokes all sessions for this user across all protected hosts managed by this specific worker. The user will need to re-authenticate on all hosts protected by this worker. Useful when a user reports suspicious activity on their account."
                                            icon="fa-user-times"/>
                                </list>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="name" readonly="1"/>
                                                <field name="worker_type" readonly="1"/>
                                                <field name="is_healthy" readonly="1"/>
                                            </group>
                                            <group>
                                                <field name="host_count" readonly="1"/>
                                                <field name="health_status" readonly="1"/>
                                                <field name="last_seen_ts" readonly="1"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_sunray_users" model="ir.actions.act_window">
        <field name="name">Users</field>
        <field name="res_model">sunray.user</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_sunray_user_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Sunray user
            </p>
            <p>
                Users can authenticate using WebAuthn passkeys.
                Generate setup tokens to allow users to register their passkeys.
            </p>
        </field>
    </record>
</odoo>
