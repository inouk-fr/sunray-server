<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Module Category -->
    <record id="module_category_sunray" model="ir.module.category">
        <field name="name">Sunray</field>
        <field name="description">Sunray Authentication System</field>
        <field name="sequence">100</field>
    </record>
    
    <!-- Security Groups -->
    <record id="group_sunray_user" model="res.groups">
        <field name="name">Sunray User</field>
        <field name="category_id" ref="module_category_sunray"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    
    <record id="group_sunray_manager" model="res.groups">
        <field name="name">Sunray Manager</field>
        <field name="category_id" ref="module_category_sunray"/>
        <field name="implied_ids" eval="[(4, ref('group_sunray_user'))]"/>
    </record>
    
    <record id="group_sunray_admin" model="res.groups">
        <field name="name">Sunray Administrator</field>
        <field name="category_id" ref="module_category_sunray"/>
        <field name="implied_ids" eval="[(4, ref('group_sunray_manager'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>